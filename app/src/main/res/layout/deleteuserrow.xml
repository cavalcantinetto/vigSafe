<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_gravity="center"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:padding="2sp"
    android:id="@+id/layoutDeleteUserRow"
    android:background="@color/LIGHTBLUE"
    android:layout_marginTop="200dp">

    <LinearLayout
        android:layout_width="301dp"
        android:layout_height="120dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userdeletetext"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/userdeletemessage"
            android:gravity="center"
            android:textColor="@color/white"/>


        <TextView
            android:id="@+id/userdelete"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text=""
            android:textSize="24sp"
            android:textColor="@color/white"
            android:hint="@string/deleteuser"/>

        <TextView
            android:id="@+id/functiondelete"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text=""
            android:textSize="24sp"
            android:textColor="@color/white"
            android:hint="@string/deleteuser"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/eraser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/icons8rash24"
        android:scaleType="fitCenter"/>

</LinearLayout>